{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types",
      "./config/global.d.ts"
    ],
    "target": "es5",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths":{
      "@/*" : ["./src/*"],
    },
    "sourceMap": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
